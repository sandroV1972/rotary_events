<h1 class="d-flex justify-content-between align-items-center mb-3">Eventi
  <%= link_to 'Nuovo Evento', new_event_path, class: 'btn btn-primary btn-sm' %>
</h1>

<table class="table table-hover mb-5">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Data</th>
      <th></th> <!-- Rimuovi la scritta "Azioni" -->
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event_path(event), class: 'text-decoration-none' do %>
            <h5 class="mb-0 event-name"><%= event.name %></h5>
          <% end %>
        </td>
        <td>
          <span class="badge bg-primary"><%= event.date.strftime("%d/%m/%Y") %></span>
        </td>
        <td class="table-actions">
          <%= link_to edit_event_path(event), class: 'btn btn-secondary btn-sm me-2' do %>
            <i class="bi bi-pencil"></i> Modifica
          <% end %>
          <%= link_to event, method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-danger btn-sm me-2' do %>
            <i class="bi bi-trash"></i> Elimina
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


      <h2 class="d-flex justify-content-between align-items-center">Gestione Utenti
      <%= link_to 'Aggiungi Utente', new_admin_user_path, class: 'btn btn-primary btn-sm' %>
</h2>

  <table class="table table-hover mb-5">
    <thead class="thead-light">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Ruolo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role_name %></td>
          <td class="text-right table-actions">
            <%= link_to 'Modifica', edit_admin_user_path(user), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Elimina', admin_user_path(user), method: :delete, data: { confirm: 'Sei sicuro di voler eliminare questo utente?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


