<h1 class="mb-4">Eventi</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Data</th>
      <th>Azioni</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event_path(event), class: 'text-decoration-none' do %>
            <h5 class="mb-0"><%= event.name %></h5>
          <% end %>
        </td>
        <td>
          <span class="badge bg-primary"><%= event.date.strftime("%d/%m/%Y") %></span>
        </td>
        <td>
          <%= link_to 'Modifica', edit_event_path(event), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Elimina', event, method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuovo Evento', new_event_path, class: 'btn btn-primary' %>