<h1 class="mb-4">Admin Dashboard</h1>

<h2 class="d-flex justify-content-between align-items-center">
  Gestione Eventi
  <%= link_to 'Crea Nuovo Evento', new_admin_event_path, class: 'btn btn-primary btn-sm' %>
</h2>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Data</th>
      <th>Azioni</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event_path(event), class: 'text-decoration-none' do %>
            <h5 class="mb-0"><%= event.name %></h5>
          <% end %>
        </td>
        <td>
          <span class="badge bg-primary"><%= event.date.strftime("%d/%m/%Y") %></span>
        </td>
        <td>
          <%= link_to edit_admin_event_path(event), class: 'btn btn-secondary btn-sm me-2' do %>
            <i class="bi bi-pencil"></i> Modifica
          <% end %>
          <%= link_to admin_event_path(event), method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-danger btn-sm me-2' do %>
            <i class="bi bi-trash"></i> Elimina
          <% end %>
          <%= link_to invite_admin_event_path(event), class: 'btn btn-primary btn-sm' do %>
            <i class="bi bi-envelope"></i> Invita
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="mb-4">Gestione Utenti</h2>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Ruolo</th>
      <th>Azioni</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.present? ? user.role.name : 'Nessun ruolo' %></td>
        <td>
          <%= link_to edit_admin_user_path(user), class: 'btn btn-secondary btn-sm me-2' do %>
            <i class="bi bi-pencil"></i> Modifica
          <% end %>
          <%= link_to admin_user_path(user), method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-danger btn-sm me-2' do %>
            <i class="bi bi-trash"></i> Elimina
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="d-flex justify-content-between align-items-center">
  Gestione Tipi di Eventi
  <%= link_to 'Nuovo Tipo di Evento', new_admin_event_type_path, class: 'btn btn-primary btn-sm' %>
</h2>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Azioni</th>
    </tr>
  </thead>
  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.name %></td>
        <td>
          <%= link_to edit_admin_event_type_path(event_type), class: 'btn btn-secondary btn-sm me-2' do %>
            <i class="bi bi-pencil"></i> Modifica
          <% end %>
          <%= link_to admin_event_type_path(event_type), method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-danger btn-sm me-2' do %>
            <i class="bi bi-trash"></i> Elimina
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
