<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0"><%= @event.name %></h3>
        </div>
        <div class="card-body">
          <p><strong>Descrizione:</strong> <%= @event.description %></p>
          <p><strong>Data:</strong> <%= @event.date.strftime("%d/%m/%Y") %></p>
          <p><strong>Ora:</strong> <%= @event.time.present? ? @event.time.strftime("%H:%M") : 'Non specificata' %></p>
          <p><strong>Location:</strong> <%= @event.location %></p>
          <p><strong>Tipologia:</strong> <%= @event.event_type.present? ? @event.event_type.name : 'Non specificata' %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <% if current_user.admin? %>    
            <%= link_to 'Modifica Evento', edit_event_path(@event), class: 'btn btn-secondary' %>
          <% end %>
          <%= link_to 'Torna alla Lista', events_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
 
    <% if current_user.admin? %>
    <h2>Utenti e Ospiti Registrati</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cognome</th>
          <th>Tipo</th>
          <th>Stato</th>
          <th>Invitato da</th>
        </tr>
      </thead>
      <tbody>
        <% @event.invitations.each do |invitation| %>
          <% if invitation.user %>
            <tr>
              <td><%= invitation.user.first_name %></td>
              <td><%= invitation.user.last_name %></td>
              <td>Utente</td>
              <td class="<%= invitation_status_class(invitation.status) %>"><%= invitation_status_text(invitation.status) %></td>
              <td>-</td>
            </tr>
            <% invitation.user.guests.each do |guest| %>
              <tr>
                <td><%= guest.name %></td>
                <td><%= guest.surname %></td>
                <td>Ospite</td>
                <td>-</td>
                <td><%= invitation.user.full_name %></td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2>I Miei Ospiti Registrati</h2>
    <ul>
      <% current_user.guests.each do |guest| %>
        <li><%= guest.name %> <%= guest.surname %></li>
      <% end %>
    </ul>
  <% end %>

     </div>
  </div>
  <% if current_user.admin? %>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <h4>Invia Inviti</h4>
      <%= form_with model: [@event, @event.invitations.build], local: true do |form| %>
        <div class="mb-3">
          <%= form.label :user_id, 'Seleziona Utente' %>
          <%= form.collection_select :user_id, User.all, :id, :full_name, prompt: 'Seleziona un utente', class: 'form-control' %>
        </div>
        <%= form.submit 'Invia Invito', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>
