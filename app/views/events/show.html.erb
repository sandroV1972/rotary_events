
<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<p>Data: <%= @event.date.strftime("%d/%m/%Y") %></p>
<p>Ora: <%= @event.time.present? ? @event.time.strftime("%H:%M") : 'Non specificata' %></p>
<p>Location: <%= @event.location %></p>
<p>Tipologia: <%= @event.event_type.present? ? @event.event_type.name : 'Non specificato' %></p>


<% if current_user.admin? %>    
    <%= link_to 'Modifica Evento', edit_event_path(@event), class: 'btn btn-secondary' %>
<% end %>
<%= link_to 'Torna alla Lista', events_path, class: 'btn btn-primary' %>
